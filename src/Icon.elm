import Html exposing (Html)
import Html.Attributes exposing (class)
import Svg exposing (path, svg)
import Svg.Attributes as SvgAttr exposing (d, fill, viewBox)


{-| Opaque type for icons
-}
type Icon
    = Icon String


{-| Render an icon with optional CSS classes
We wrap the SVG in a span to accept HTML attributes (since SVG className is read-only)
-}
view : List (Html.Attribute msg) -> Icon -> Html msg
view htmlAttrs (Icon pathData) =
    Html.node "span"
        (class "inline-block leading-none" :: htmlAttrs)
        [ svg
            [ viewBox "0 0 24 24"
            , fill "currentColor"
            , SvgAttr.width "1em"
            , SvgAttr.height "1em"
            ]
            [ path [ d pathData ] [] ]
        ]


